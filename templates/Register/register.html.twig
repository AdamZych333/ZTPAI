<!DOCTYPE html>
<head>
    <link href="{{ asset('css/login.css') }}" rel="stylesheet"/>
    <title>REGISTER PAGE</title>
</head>
<body>
<div class="container">
    <div class="logo">
        <img src="{{ asset('img/logo.svg') }}">
    </div>
    <div class="login-container">
        <form class="log-in" method="post">
            {% for flashError in app.flashes('verify_email_error') %}
                <p>{{ flashError }}</p>
            {% endfor %}

            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email, {'attr': {'placeholder': 'email'}, 'label': false}) }}
            {{ form_row(registrationForm.plainPassword.first, {'attr': {'placeholder': 'password'}, 'label': false}) }}
            {{ form_row(registrationForm.plainPassword.second, {'attr': {'placeholder': 'confirm password'}, 'label': false}) }}

            <button type="submit" class="btn">Register</button>
            {{ form_end(registrationForm) }}
        </form>
    </div>
    <div>
        <a class="switch" href="{{ path('app_login') }}">Login</a>
    </div>
</div>
</body>