<script src="{{ asset('js/statistics.js') }}" type="text/javascript" defer></script>
<div class="memes">
    {% for meme in memes %}
        <div class="meme" id="{{ meme.getSlug }}">
            <a href="{{ path('meme', {'slug':meme.getSlug}) }}">
                <img src="uploads/{{ asset(meme.getImage) }}">
            </a>
            <div class="info">
                <h1>{{ meme.getTitle }}</h1>
                <div class="description">
                    <h2>{{ meme.createdBy.getEmail }}</h2>
                    <h2>{{ meme.getCreatedAt|date("d-m-Y") }}</h2>
                </div>
                <div class="social-section">
                    <i class="fas fa-thumbs-up">
                        <span>{{ meme.getLikes }}</span>
                    </i>
                    </a>
                    <a href="{{ path('meme', {'slug':meme.getSlug}) }}">Comments({{ meme.getComments|length }})</a>
                    <i class="fas fa-thumbs-down">
                        <span>{{ meme.getDislikes }}</span>
                    </i>
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>